if gameenv['static']:
    env.Library('SexyAppFramework', srcs)
else:
    env.SharedLibrary('SexyAppFramework', srcs)

if env.has_key ('LUIS') and env['LUIS']:
    env = Environment ()
    env.Program ('luis', 'LinuxUdpInputServer.cpp')

